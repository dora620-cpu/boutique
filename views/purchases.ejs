<%- include('./partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boutique</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            height: 100vh; /* Vue pleine hauteur */
            background-color: #343a40;
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            padding-top: 20px;
        }

        .sidebar a {
            color: white;
        }

        .sidebar a:hover {
            background-color: #495057;
            color: white;
        }

        .content {
            margin-left: 220px; /* Décalage à gauche pour tenir compte du sidebar */
            padding: 20px;
        }

        h2, h3 {
            color: #007bff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .table-striped > tbody > tr:nth-of-type(odd) {
            background-color: #f2f2f2;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .content {
                margin-left: 0;
            }

            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4 class="text-center">Boutique</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/">Tableau de bord</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/purchases">Achats</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/carts">Paniers</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="content container p-4">
            <h2 class="text-center">Achats</h2>

             
            <div class="row">
                <!--<div class="col-md-8 mx-auto">
                    <h3 class="text-center">Add a New Purchase</h3>
                    <form action="/purchases/add" method="POST">
                        <div class="mb-3">
                            <label for="cartNumber" class="form-label">Cart Number</label>
                            <input type="number" class="form-control" id="cartNumber" name="cartNumber" required>
                        </div>
                        <div class="mb-3">
                            <label for="products" class="form-label">Products (JSON format)</label>
                            <textarea class="form-control" id="products" name="products" rows="5" required></textarea>
                            <small class="form-text text-muted">Provide a JSON array of products, e.g. [{"productId": "id", "quantity": 2}]</small>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Add Purchase</button>
                        </div>
                    </form>
                    
                </div>
            </div>
            Provide a JSON array of products, e.g. [{"productId": "id", "quantity": 2}] -->

            <!-- Existing Purchases Table -->
            <div class="row mt-5">
                <div class="col-md-10 mx-auto">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Numéro de panier</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% purchases.forEach(purchase => { %>
                            <tr>
                                <td><%= purchase._id.toString().slice(-6) %></td> <!-- Affiche les 6 derniers caractères de l'ID -->
                                <td><%= purchase.cartNumber %></td>
                                <td><%= new Date(purchase.date).toLocaleDateString('fr-FR', { year: 'numeric', month: 'long', day: 'numeric' }) %></td> <!-- Formattage de la date -->
                                <td>
                                    <a href="/purchases/details/<%= purchase._id %>" class="btn btn-info">Details</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
